<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="TouchTargetSizeCheck,HardcodedText,ContentDescription,TextContrastCheck,RtlSymmetry"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F0"
    android:padding="24dp">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="12dp"
        android:contentDescription="Logo"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <!-- Social Login Icons (Facebook, Google, Apple) -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.04"
        android:text="Almost There!"
        android:textColor="#579F4E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="291dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:letterSpacing="-0.04"
        android:textColor="@color/black"
        android:lineHeight="16dp"
        android:text="Letâ€™s keep your account secure. Create a strong new password, then confirm it below."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/passwordInput2"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:autofillHints="password"
        android:background="@drawable/edittext_bg"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:hint="password"
        android:inputType="textPassword"
        android:letterSpacing="-0.04"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.517"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/newPasswordInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F5F5F0"
        android:clickable="true"
        android:focusable="true"
        android:letterSpacing="-0.04"
        android:padding="0dp"
        android:text="New Password"
        android:textColor="#579F4E"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/confirmPasswordInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F5F5F0"
        android:clickable="true"
        android:focusable="true"
        android:letterSpacing="-0.04"
        android:padding="0dp"
        android:text="Confirm Password"
        android:textColor="#579F4E"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/passwordInput3"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:autofillHints="email"
        android:background="@drawable/edittext_bg"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:hint="password"
        android:inputType="textPassword"
        android:letterSpacing="-0.04"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.644"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/newPasswordInText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F5F5F0"
        android:clickable="true"
        android:focusable="true"
        android:letterSpacing="-0.04"
        android:text="Both passwords must match."
        android:textColor="#9D9D9D"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.110"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/newPasswordInText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F5F5F0"
        android:clickable="true"
        android:focusable="true"
        android:letterSpacing="-0.04"
        android:paddingTop="0dp"
        android:text="Must be at least 8 characters."
        android:textColor="#9D9D9D"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.110"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/resetPasswordInText"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/gradient_button"
        android:letterSpacing="-0.04"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
